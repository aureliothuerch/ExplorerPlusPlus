{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ui:dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["dev"],
      "isBackground": true,
      "presentation": { "reveal": "always", "panel": "dedicated" },
      "windows": { "command": "pnpm.cmd" },
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": "absolute",
        "pattern": { "regexp": "." },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "starting dev server|watching for file changes|vite v\\d+",
          "endsPattern": "Local:|Network:|ready in .*"
        }
      }
    },
    {
      "label": "ui:build",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "windows": { "command": "pnpm.cmd" }
    }
  ]
}
